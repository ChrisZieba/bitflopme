<% include ../partials/header.ejs %>

<div class="jumbotron sub">
	<div class="container">
		<h1>Start a New Game</h1>
	</div>
	
</div>

<div class="container">
	

	<div class="row">


		<div class='col-lg-12'>  

			<form class="form-horizontal" role="form" method="post" action="/game/new">

				
				<input type="hidden" name="_csrf" value="<%= token %>"/>

				<div class='form-group <% if (errors.tableName) { %>has-error<% } %>'>
					
					<label class="col-lg-6 control-label">bitflop.me/game/play/</label>
					<div class="col-lg-6">
						<input class="form-control" name="tableName" size="30" type="text" placeholder="Table Name" />
						<% if (errors.tableName) { %>
							<div class="alert alert-danger"><p><%= errors.tableName.msg %></p></div>
						<% } %>
					</div>
				</div>

				<div class='form-group <% if (errors.tableName) { %>has-error<% } %>'>
					
					<label class="col-lg-6 control-label">Timer</label>
					<div class="col-lg-6">
						<select class="form-control" name="tableTimer">
							<option>30</option>
						</select>

						<% if (errors.tableName) { %>
							<div class="alert alert-danger"><p><%= errors.tableName.msg %></p></div>
						<% } %>
					</div>
				</div>

				<div class="form-group">
					<div class="col-lg-6 col-md-offset-6">
						<input type="submit" class="btn btn-lg btn-block btn-success" value="Create New Game" />
					</div>
				</div>

			</form>
		</div>


	</div>


</div>

<% include ../partials/footer.ejs %>