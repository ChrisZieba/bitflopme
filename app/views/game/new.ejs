<% include ../partials/header.ejs %>

<div class="jumbotron sub">
	<div class="container">
		<h1>Start a New Game</h1>
	</div>
	
</div>

<div class="container">
	

	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">  
			<form role="form" method="post" action="/game/new" class="well">
				<input type="hidden" name="_csrf" value="<%= token %>"/>
				<div class='form-group <% if (errors.smallBlind) { %>has-error<% } %>'>
					
					<label class="control-label">Small Blind</label>
					<input class="form-control mg-top-bot-5" name="smallBlind" size="30" type="text" placeholder="Small Blind e.g. 15" />
					<% if (errors.smallBlind) { %>
						<div class="alert alert-danger"><p><%= errors.smallBlind.msg %></p></div>
					<% } %>
				</div>

				<div class='form-group <% if (errors.bigBlind) { %>has-error<% } %>'>
					<label class="control-label">Big Blind</label>
					<input class="form-control mg-top-bot-5" name="bigBlind" size="30" type="text" placeholder="Big Blind" />
					<% if (errors.bigBlind) { %>
						<div class="alert alert-danger"><p><%= errors.bigBlind.msg %></p></div>
					<% } %>
				</div>

				<div class='form-group <% if (errors.chipStack) { %>has-error<% } %>'>
					<label class="control-label">Starting Chips</label>
					<input class="form-control mg-top-bot-5" name="chipStack" size="30" type="text" placeholder="Chip Stack" />
					<% if (errors.chipStack) { %>
						<div class="alert alert-danger"><p><%= errors.chipStack.msg %></p></div>
					<% } %>
				</div>

				<div class='form-group <% if (errors.tableTimer) { %>has-error<% } %>'>
					
					<label class="control-label">Timer</label>

					<select class="form-control mg-top-bot-5" name="tableTimer">
						<option>None</option>
					</select>

					<% if (errors.tableTimer) { %>
						<div class="alert alert-danger"><p><%= errors.tableTimer.msg %></p></div>
					<% } %>

				</div>

				<div class="form-group">

					<input type="submit" class="btn btn-md btn-block btn-primary" value="Create New Game" />

				</div>

			</form>
		</div>
	</div>

</div>

<% include ../partials/footer.ejs %>