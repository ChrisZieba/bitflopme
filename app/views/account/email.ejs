<% include ../partials/header.ejs %>

<div class="jumbotron sub">
	<div class="container">
		<% if (profile.email) { %>
			<h1>Update Email</h1>
		<% } else { %>
			<h1>Add Email</h1>
		<% } %>
	</div>
	
</div>

<div class="container">

	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">  

			<h3><i class="fa fa-user"></i> <%= profile.username %></h3>

			<% if (profile.email) { %>
				<p><strong>Current Email:</strong> <%= profile.email %></p>
			<% } %>
			<form role="form" method="post" action="/account/email" class="well">

				<input type="hidden" name="_csrf" value="<%= token %>"/>

				<div class="form-group <% if (errors.email) { %>has-error<% } %>">
					<label>Email</label>
					<input type="text" name="email" class="form-control mg-top-bot-5" placeholder="Email">
					<% if (errors.email) { %>
						<div class="alert alert-danger"><p><%= errors.email.msg %></p></div>
					<% } %>
				</div>

				<div class="form-group">
					<% if (profile.email) { %>
						<input type="submit" class="btn btn-block btn-primary mg-top-bot-5" value="Update Email" />
					<% } else { %>
						<input type="submit" class="btn btn-block btn-primary mg-top-bot-5" value="Add Email" />
					<% } %>
				</div>
			</form>
		</div>
	</div>

</div>

<% include ../partials/footer.ejs %>