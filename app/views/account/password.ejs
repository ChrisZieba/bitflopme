<% include ../partials/header.ejs %>

<div class="jumbotron sub">
	<div class="container">
		<h1>Reset my Password</h1>
	</div>
	
</div>

<div class="container">

	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">  

			<form role="form" method="post" action="/password/new" class="well">

				<input type="hidden" name="_csrf" value="<%= token %>"/>

				<div class="form-group <% if (errors.username) { %>has-error<% } %>">
					<label>Username</label>
					<input type="text" name="username" class="form-control mg-top-bot-5" placeholder="Enter your username">
					<% if (errors.username) { %>
						<div class="alert alert-danger"><p><%= errors.username.msg %></p></div>
					<% } %>
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-block mg-top-bot-5" value="Email Me" />
				</div>
			</form>
		</div>
	</div>

</div>

<% include ../partials/footer.ejs %>