<% include partials/header.ejs %>


<div class="jumbotron sub">
	<div class="container">
		<h1>Register</h1>
		<p>All it takes is a username and password.</p>
	</div>
	
</div>

<div class="container">
	


	<div class="row">
		<div class="col-sm-4">  
			<div class="row">
				<div class="col-sm-12">  
					<form role="form" method="post" action="/register" class="well">

						
						
						<div class="form-group"><input type="hidden" name="_csrf" value="<%= token %>"/></div>
						
						<div class="form-group <% if (errors.registerUsername) { %>has-error<% } %>">
							<label>Username</label>
							<input type="text" name="registerUsername" class="form-control mg-top-bot-5" placeholder="Username">
							<% if (errors.registerUsername) { %>
								<div class="alert alert-danger"><p><%= errors.registerUsername.msg %></p></div>
							<% } %>
						</div>
						
						<div class="form-group <% if (errors.registerPassword) { %>has-error<% } %>">
							<label>Password</label>
							<input type="password" name="registerPassword" class="form-control mg-top-bot-5" placeholder="Password">
							<% if (errors.registerPassword) { %>
								<div class="alert alert-danger"><p><%= errors.registerPassword.msg %></p></div>
							<% } %>
						</div>
						
						<div class="form-group <% if (errors.registerPasswordConfirm) { %>has-error<% } %>">
							<label>Confirm Password</label>
							<input type="password" name="registerPasswordConfirm" class="form-control mg-top-bot-5" placeholder="Confirm your password">
							<% if (errors.registerPasswordConfirm) { %>
								<div class="alert alert-danger"><p><%= errors.registerPasswordConfirm.msg %></p></div>
							<% } %>
						</div>
						
						<div class="form-group <% if (errors.registerEmail) { %>has-error<% } %>">
							<label>Optional Email</label>
							<input type="text" name="registerEmail" class="form-control mg-top-bot-5" placeholder="Optional Email">
							<% if (errors.registerEmail) { %>
								<div class="alert alert-danger"><p><%= errors.registerEmail.msg %></p></div>
							<% } %>
						</div>

						<div class="form-group <% if (errors.registerTerms) { %>has-error<% } %>">
							<div class="checkbox">
								<label>
									<input type="checkbox" name="registerTerms"> A agree to the terms & conditions
								</label>
							</div>
							<% if (errors.registerTerms) { %>
								<div class="alert alert-danger"><p><%= errors.registerTerms.msg %></p></div>
							<% } %>
						</div>

						<div class="form-group">
							<input type="submit" class="btn btn-block btn-success mg-top-bot-5" value="Register" />
						</div>

					</form>

				</div>
			</div>
