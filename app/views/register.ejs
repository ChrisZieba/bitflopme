<% include partials/header.ejs %>


<div class="jumbotron sub">
	<div class="container">
		<h1>Register</h1>
		<p>Already a member? <a href="/login"><strong>Login Here.</strong></a></p>
	</div>
	
</div>

<div class="container">

	<div class="row">
		<div ng-controller="RegisterCtrl" class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3"> 
			<form role="form" name="register" method="post" action="/register" class="well" novalidate>

				<input id="form-csrf" type="hidden" name="_csrf" value="<%= token %>" ng-init="token = '<%= token %>'"/>
				
				<div class="form-group <% if (errors.username) { %>has-error<% } %>" ng-class="{ 'has-error': register.username.$dirty && register.username.$invalid && !register.username.$focused, 'has-success': register.username.$dirty && register.username.$valid && !register.username.$focused }">
					<label>Choose a Username</label>
					
					<input type="text" name="username" autocomplete="off" class="form-control mg-top-bot-5" placeholder="Username" maxlength="15" required ng-required="true" ng-maxlength="15" ng-pattern="/^[a-zA-Z0-9\_]+$/" unique-username ng-model="username" ng-focus />
					
					<% if (errors.username) { %>
						<div class="alert alert-danger" ng-cloack ng-hide="register.username.$dirty && register.username.$focused">
							<span><%= errors.username.msg %></span>
						</div>
					<% } %>

					<div class="alert alert-danger" ng-cloak ng-show="register.username.$dirty && register.username.$invalid && register.username.$error.unique">
						<span>This username is already taken!</span>
					</div>

					<div class="alert alert-danger" ng-cloak ng-show="register.username.$dirty && register.username.$invalid && register.username.$error.pattern">
						<span>Invalid Username! Alphanumerics only.</span>
					</div>

					<div class="alert alert-danger" ng-cloak ng-show="register.username.$dirty && register.username.$invalid && register.username.$error.required && !register.username.$focused">
						<span>A username is required!</span>
					</div>

					<div class="alert alert-danger" ng-cloak ng-show="register.username.$dirty && register.username.$invalid && register.username.$error.maxlength && !register.username.$focused">
						<span>Can't be more than 15 characters.</span>
					</div>

				</div>
				
				<div class="form-group <% if (errors.password) { %>has-error<% } %>">
					<label>Choose a Password</label>
					<input type="password" name="password" autocomplete="off" class="form-control mg-top-bot-5" placeholder="Password " maxlength="55" required ng-minlength="6" ng-maxlength="55">
					
					<% if (errors.password) { %>
						<div class="alert alert-danger"><p><%= errors.password.msg %></p></div>
					<% } %>
				</div>
				
				<div class="form-group <% if (errors.passwordConfirm) { %>has-error<% } %>">
					<label>Confirm Password</label>
					<input type="password" name="passwordConfirm" autocomplete="off" class="form-control mg-top-bot-5" placeholder="Confirm your password" maxlength="55" required ng-minlength="6" ng-maxlength="55">
					<% if (errors.passwordConfirm) { %>
						<div class="alert alert-danger"><p><%= errors.passwordConfirm.msg %></p></div>
					<% } %>
				</div>
				
				<div class="form-group <% if (errors.email) { %>has-error<% } %>">
					<label>Optional Email</label>
					<input type="text" name="email" class="form-control mg-top-bot-5" placeholder="Optional Email">
					<% if (errors.email) { %>
						<div class="alert alert-danger"><p><%= errors.email.msg %></p></div>
					<% } %>
				</div>

				<div class="form-group">
					<p class="text-muted text-center"><small>By completing this form, you confirm your agreement to our <a href="/terms">Terms of Use</a>.</small></p>
					<input type="submit" class="btn btn-block btn-lg btn-success mg-top-bot-5" value="Register"/>
				</div>
			</form>


		</div>


	</div>

